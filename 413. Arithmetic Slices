class Solution {
    public int numberOfArithmeticSlices(int[] nums) {
       if(nums.length<3) return 0;
       int cnt=0,total=0;
       for(int j=2;j<nums.length;j++){
        if(nums[j]-nums[j-1]==nums[j-1]-nums[j-2]){
            cnt++;
            total+=cnt;
        }
        else cnt=0;
       } 
       return total;
    }
}
